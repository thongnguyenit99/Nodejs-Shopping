<div id="content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4 col-sm-8 col-sx-12">
                <h3 class="info-text">Thông tin đăng nhập</h3>

                <form action="/tai-khoan/tai-khoan-nguoi-dung" class="needs-validation" novalidate>
                    <div class="form-group">
                        <label for="uname">Nhập Username</label>
                        <input type="text" class="form-control" id="uname" placeholder="Nhập vào Username " name="uname"
                            required>
                        <div class="valid-feedback">Hợp lệ</div>
                        <div class="invalid-feedback">Nội dung không được bỏ trống..</div>
                    </div>
                    <div class="form-group">
                        <label for="pwd">Mật khẩu</label>
                        <input type="password" class="form-control" id="pwd" placeholder="Nhập vào mật khẩu" name="pswd"
                            required>
                        <div class="valid-feedback">Hợp lệ</div>
                        <div class="invalid-feedback">Nội dung không được bỏ trống.</div>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" name="remember" required> Tôi đồng ý nhớ mật
                            khẩu
                            <div class="valid-feedback">Hợp lệ</div>
                            <div class="invalid-feedback">Phải check vào mới tiếp tục</div>
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary mb-5" id="login">Đăng nhập</button>
                    <button type="button" class="btn btn-danger mb-5" id="return"
                        onclick="window.location.href='/'">Trở về</button>
                </form>
            </div>
        </div>
    </div>
</div>